<div id="front_page_wrapper">
	<div class="sub_title">Featured Local Bazaar</div>
	<% @items.each do |product| %>
	  <div class="product">
	    <%= link_to image_tag(product.image.url(:medium)), item_path(product) %>
			<div class="product-label"><%= link_to product.title, product_path(product) %></div>
			<div class="product-price"><%= number_to_currency(product.price, :precision => 0) %></div>
			<div class="product-desc"><%= truncate(product.description, :length => 42) %></div>
			<div class="product-dist"></div>
	  </div>
	<% end %>

	<div style="clear:both"></div>
</div>