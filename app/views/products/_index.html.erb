<div class="sub_title">Featured Local Bazaar</div>
<% products.each do |product| %>
  <div class="product">
    <%= link_to image_tag(product.image.url(:medium)), item_path(product) %>
		<div class="product-label"><%= link_to product.title, product_path(product) %></div>
		<div class="product-price"><%= number_to_currency(product.price, :precision => 0) %></div>
		<div class="product-desc"><%= truncate(product.description, :length => 42) %></div>
		<div class="product-dist"></div>
  </div>
<% end %>

<div style="clear:both"></div>

<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
        
<script type="text/javascript">
  google.load("search", "1");
  google.load("jquery", "1.4.2");
  google.load("jqueryui", "1.7.2");
  
  function distance(lat1, lon1, lat2, lon2, unit) {
    var radlat1 = Math.PI * lat1/180
    var radlat2 = Math.PI * lat2/180
    var radlon1 = Math.PI * lon1/180
    var radlon2 = Math.PI * lon2/180
    var theta = lon1-lon2
    var radtheta = Math.PI * theta/180
    var dist = Math.sin(radlat1) * Math.sin(radlat2) + Math.cos(radlat1) * Math.cos(radlat2) * Math.cos(radtheta);
    dist = Math.acos(dist)
    dist = dist * 180/Math.PI
    dist = dist * 60 * 1.1515
    if (unit=="K") { dist = dist * 1.609344 }
    if (unit=="N") { dist = dist * 0.8684 }
    return dist
  }

  function distanceToZip(zip, unit, callback) {
    var d = 0;
    var geocoder = new google.maps.Geocoder();
    geocoder.geocode( { 'address': zip}, function(results, status) {
      if (status == google.maps.GeocoderStatus.OK) {
        // given coordinates
        lat2 = results[0].geometry.location.Ya;
        lon2 = results[0].geometry.location.Za;  

        // current coordinates
        var lat1 = google.loader.ClientLocation.latitude;
        var lon1 = google.loader.ClientLocation.longitude;

        d = distance(lat1, lon1, lat2, lon2, "M");
        callback(d);
      } else {
        alert("Geocode was not successful for the following reason: " + status);
      }
    });
  }

  var zip = "92840";
  distanceToZip(zip, "M", function(d) { 
    $(".product-dist").css("height", d/20 + "px")
    console.log(d);
  });
</script>

