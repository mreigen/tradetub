<%
	show_remove_icon = defined?(show_remove_icon) ? show_remove_icon : false
	show_remove_icon = true if show_remove_icon.nil?
%>
<div class="down-arrow"></div>
<ul>
<% if offer.wanted_items.empty? && @cart.line_items.empty? %>
	<div id="no-item-wanted" class="no-item">No item</div>
<% else %>
	<% wanted_items = @cart.line_items.empty? ? offer.wanted_items : @cart.line_items %>
	<% wanted_items.each_with_index do |wanted_item, i| %>
		<li class="their-item-list">
			<% @product = wanted_item.product %>
			<div class="item-id"><%= @product.id %></div>
			<div class="item-image-list"><img src="<%= @product.image.url(:thumb) %>" /></div>									
			<div class="item-title"><%=  @product.title %></div>
			<div class="item-description"><%= @product.description %></div>
			<div class="item-price"><%= number_to_currency(@product.price) %></div>
			<%= hidden_field_tag 'wanted[' + @product.id.to_s + '][price]', @product.price %>
			<% if i % 3 != 0 %>
				<div class="plus-sign">+</div>
			<% end %>
			<% if show_remove_icon %>
				<img class="close-icon" src="http://icons.iconarchive.com/icons/visualpharm/must-have/256/Remove-icon.png"/>
			<% end %>
		</li>
	<% end #end of each %>
<% end #end of if %>
</ul>

<script language="javascript">
	$("document").ready(function() {
		$(".close-icon").click(function() {
			putBack(this);
		});		
	});
</script>