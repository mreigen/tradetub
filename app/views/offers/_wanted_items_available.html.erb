<div class="big-title"><%= @user.username %>'s Bazaar</div>
<div class="item-custom-list"><a href="#">Musical</a> | <a href="#">Households</a> | <a href="#">Hobbies</a> | <a href="#">R/C Airplanes</a> | <a href="#">Furnitures</a></div>
<ul id="their-available-item-list">
<% @user.items.each do |item| %>
<% unless offer.wanted_items.include?(WantedItem.find_by_item_id(item.id))%>
	<li class="item-li">
		<div class="item-image-list"><img src="<%= item.get_main_image(:thumb) %>" /></div>
		<div class="item-title"><%=  item.title %></div>
		<div class="item-description"><%= item.description %></div>
		<div class="item-price"><%= number_to_currency(item.price) %></div>
		<div class="item-id"><%= item.id %></div>
	</li>
	<% end %>
<% end %>
</ul>
