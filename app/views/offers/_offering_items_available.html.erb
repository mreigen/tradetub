<script language="javascript">
function setCurrent(type) {
	if (type == "items") {
		$("#my-available-item-list").show();
		$("#my-available-service-list").hide();
	}
	else if (type == "services") {
		$("#my-available-item-list").hide();
		$("#my-available-service-list").show();
	}
}
</script>
