<div class="big-title">My Bazaar</div>
<div class="item-custom-list"><a href="#">List A</a> | <a href="#">List B</a> | <a href="#">List C</a> | <a href="#">Hobby stuff</a> | <a href="#">My Electro</a></div>
<ul id="my-available-item-list">
<% @sender.products.each do |item| %>
	<% unless offer.offer_items.include?(OfferItem.find_by_product_id(item.id))%>
	<li class="item-li">
		<div class="item-image-list"><img src="<%= item.image.url(:thumb) %>" /></div>
		<div class="item-title"><%= item.title %></div>
		<div class="item-description"><%= item.description %></div>
		<div class="item-price"><%= number_to_currency(item.price) %></div>
		<div class="item-id"><%= item.id %></div>
	</li>
	<% end %>
<% end %>
</ul>
