<h1>Trader's page</h1>
<div id="user_content_wrapper">
	<div id="user_wrapper">
		<div id="avatar">
			<%= image_tag user.get_image %>
		</div>
		<div id="info">
			<div id="one">
				<div id="name"><%= user.name %>:<div class="area">San Francisco</div></div>
					<div id="ratings">RATE: ★★★★★ </div><div id="num-of-reviews">2760 reviews</div>
			</div>
			<div id="description">Hi dear my visitors. 
			My name is Lena. I hope you enjoy viewing my work as much as I enjoy creating it. All my work is original, created solely by me. I use only qualitative materials. Rest assured, you will receive quality work.</div>
			<div id="fav_category">Favorite Categories:</div>
		</div>
	</div>
	<div id="buttons">
		<% if !current_user.blank? && user.id == current_user.id %>
			<%= link_to "Edit", edit_user_path(user.id), :class => "red-button" %>
		<% end %>
	</div>
	<div id="bazaar_wrapper">
		<div id="inBazaar">
			<div class="subtitle_bazaar">In Bazaar</div>
			<% user_items.each do |i| %>
				<div class="item_wrapper">
					<div class="img_wrapper">
						<%= link_to image_tag(i.image.url(:medium), :width => 220, :tooltip => i.title, :alt => i.title), item_path(i) %>
					</div>
					<!--
					<div class="product-label"><%= link_to i.title, item_path(i) %></div>
					<div class="product-price"><%= number_to_currency(i.price, :precision => 0) %></div>
					-->
				</div>
			<% end %>
			</div>
	</div>
</div>