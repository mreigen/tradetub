<div id="bazaar_wrapper">
	<div id="inBazaar">
		<div class="subtitle_bazaar">In Bazaar</div>
		<% user_items.each do |i| %>
			<div class="item_wrapper">
				<div class="img_wrapper">
					<%= link_to image_tag(i.image.url(:medium), :width => 220, :tooltip => i.title, :alt => i.title), item_path(i) %>
				</div>
				<div class="product-label"><%= link_to i.title, item_path(i) %></div>
				<div class="product-price"><%= link_to number_to_currency(i.price, :precision => 0), item_path(i) %></div>
			</div>
		<% end %>
		</div>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		// hides prices
		$(".product-price").css({opacity: 0});
		
		$(".item_wrapper").hover(function() {
			$(this).find(".product-price").animate({opacity: 0.7}, 100);
		}).mouseleave(function() {
			$(this).find(".product-price").animate({opacity: 0}, 100);
		});
	});
</script>